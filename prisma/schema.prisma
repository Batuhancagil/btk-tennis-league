// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PLAYER
  CAPTAIN
  MANAGER
  SUPERADMIN
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Gender {
  MALE
  FEMALE
}

enum TeamCategory {
  MALE
  FEMALE
  MIXED
}

enum LeagueType {
  INTRA_TEAM
  CLUB
}

enum LeagueStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

enum MatchStatus {
  SCHEDULED
  PLAYED
  CANCELLED
  POSTPONED
}

enum MatchType {
  SINGLE
  DOUBLE
}

enum PlayerLevel {
  MASTER
  A
  B
  C
  D
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum LeagueFormat {
  DOUBLES
  INDIVIDUAL
}

enum ScoreStatus {
  PENDING
  REPORTED_BY_HOME
  REPORTED_BY_AWAY
  REPORTED_BY_BOTH
  APPROVED
  MANAGER_ENTERED
}

enum MatchRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum NotificationType {
  MATCH_REQUEST
  MATCH_ACCEPTED
  MATCH_REJECTED
  MATCH_MESSAGE
}

enum MatchRequestChatMessageType {
  TEXT
  DATE_SUGGESTION
}

enum DateSuggestionStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String
  password      String? // Optional for OAuth users
  gender        Gender?
  level         PlayerLevel?
  status        UserStatus   @default(PENDING)
  role          UserRole     @default(PLAYER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  accounts              Account[]
  sessions              Session[]
  teams                 TeamPlayer[]
  captainTeams          Team[]             @relation("TeamCaptain")
  managerLeagues        League[]           @relation("LeagueManager")
  invitations           Invitation[]
  matchSquads           MatchSquad[]
  approvedMatches       Match[]            @relation("MatchApprover")
  leaguePlayers         LeaguePlayer[]
  homeMatches           Match[]            @relation("HomePlayer")
  awayMatches           Match[]            @relation("AwayPlayer")
  scoreReports          MatchScoreReport[]
  sentMatchRequests     MatchRequest[]     @relation("MatchRequestRequester")
  receivedMatchRequests MatchRequest[]     @relation("MatchRequestOpponent")
  notifications         Notification[]
  chatMessages          MatchChat[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Team {
  id         String       @id @default(cuid())
  name       String
  captainId  String
  leagueId   String?
  category   TeamCategory
  maxPlayers Int?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  // Relations
  captain     User         @relation("TeamCaptain", fields: [captainId], references: [id])
  league      League?      @relation(fields: [leagueId], references: [id])
  players     TeamPlayer[]
  homeMatches Match[]      @relation("HomeTeam")
  awayMatches Match[]      @relation("AwayTeam")
  invitations Invitation[]
  matchSquads MatchSquad[]

  @@map("teams")
}

model League {
  id        String       @id @default(cuid())
  name      String
  type      LeagueType
  format    LeagueFormat @default(DOUBLES)
  category  TeamCategory
  season    String
  status    LeagueStatus @default(DRAFT)
  managerId String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relations
  manager       User           @relation("LeagueManager", fields: [managerId], references: [id])
  teams         Team[]
  matches       Match[]
  leaguePlayers LeaguePlayer[]
  matchRequests MatchRequest[]

  @@map("leagues")
}

model Match {
  id                 String       @id @default(cuid())
  leagueId           String
  homeTeamId         String?
  awayTeamId         String?
  homePlayerId       String?
  awayPlayerId       String?
  category           TeamCategory
  matchType          MatchType
  scheduledDate      DateTime?
  status             MatchStatus  @default(SCHEDULED)
  homeScore          Int?
  awayScore          Int?
  approvedById       String?
  approvedAt         DateTime?
  scoreStatus        ScoreStatus  @default(PENDING)
  setsWonHome        Int?
  setsWonAway        Int?
  gamesWonHome       Int?
  gamesWonAway       Int?
  finalScoreReportId String?
  matchRequestId     String?      @unique
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  // Relations
  league        League             @relation(fields: [leagueId], references: [id])
  matchRequest  MatchRequest?      @relation(fields: [matchRequestId], references: [id])
  chatMessages  MatchChat[]
  homeTeam      Team?              @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam      Team?              @relation("AwayTeam", fields: [awayTeamId], references: [id])
  homePlayer    User?              @relation("HomePlayer", fields: [homePlayerId], references: [id])
  awayPlayer    User?              @relation("AwayPlayer", fields: [awayPlayerId], references: [id])
  approvedBy    User?              @relation("MatchApprover", fields: [approvedById], references: [id])
  squads        MatchSquad[]
  scoreReports  MatchScoreReport[]
  notifications Notification[]

  @@map("matches")
}

model MatchSquad {
  id       String @id @default(cuid())
  matchId  String
  teamId   String
  playerId String
  position Int // 1-2 for single, 1-4 for double

  // Relations
  match  Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  team   Team  @relation(fields: [teamId], references: [id])
  player User  @relation(fields: [playerId], references: [id])

  @@unique([matchId, teamId, playerId])
  @@map("match_squads")
}

model TeamPlayer {
  id       String   @id @default(cuid())
  teamId   String
  playerId String
  joinedAt DateTime @default(now())

  // Relations
  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  player User @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([teamId, playerId])
  @@map("team_players")
}

model Invitation {
  id        String           @id @default(cuid())
  teamId    String
  playerId  String
  invitedBy String
  status    InvitationStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Relations
  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  player User @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([teamId, playerId])
  @@map("invitations")
}

model LeaguePlayer {
  id       String   @id @default(cuid())
  leagueId String
  playerId String
  joinedAt DateTime @default(now())

  // Relations
  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  player User   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([leagueId, playerId])
  @@map("league_players")
}

model MatchScoreReport {
  id           String   @id @default(cuid())
  matchId      String
  reportedById String
  setsWon      Int
  setsLost     Int
  gamesWon     Int
  gamesLost    Int
  setScores    Json // Array of set scores from reporter's perspective
  createdAt    DateTime @default(now())

  // Relations
  match    Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  reporter User  @relation(fields: [reportedById], references: [id])

  @@unique([matchId, reportedById])
  @@map("match_score_reports")
}

model MatchRequest {
  id            String             @id @default(cuid())
  leagueId      String
  requesterId   String
  opponentId    String
  message       String?
  suggestedDate DateTime?
  suggestedTime String?
  status        MatchRequestStatus @default(PENDING)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  // Relations
  league        League         @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  requester     User           @relation("MatchRequestRequester", fields: [requesterId], references: [id])
  opponent      User           @relation("MatchRequestOpponent", fields: [opponentId], references: [id])
  match         Match?
  notifications Notification[]
  chatMessages  MatchChat[]

  @@unique([leagueId, requesterId, opponentId])
  @@map("match_requests")
}

model Notification {
  id             String           @id @default(cuid())
  userId         String
  type           NotificationType
  matchRequestId String?
  matchId        String?
  message        String
  read           Boolean          @default(false)
  createdAt      DateTime         @default(now())

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  matchRequest MatchRequest? @relation(fields: [matchRequestId], references: [id], onDelete: Cascade)
  match        Match?        @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}

model MatchChat {
  id            String                      @id @default(cuid())
  matchId       String?
  matchRequestId String?
  senderId      String
  message       String?                      @db.Text
  messageType   MatchRequestChatMessageType  @default(TEXT)
  suggestedDate DateTime?
  suggestedTime String?
  dateStatus    DateSuggestionStatus?
  createdAt     DateTime                     @default(now())

  // Relations
  match        Match?        @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchRequest MatchRequest? @relation(fields: [matchRequestId], references: [id], onDelete: Cascade)
  sender       User          @relation(fields: [senderId], references: [id])

  @@index([matchId, createdAt])
  @@index([matchRequestId, createdAt])
  @@map("match_chat")
}
